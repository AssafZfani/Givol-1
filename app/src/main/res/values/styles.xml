<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GivolTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/min_margin_start</item>
        <item name="android:textDirection">rtl</item>
    </style>

</resources>
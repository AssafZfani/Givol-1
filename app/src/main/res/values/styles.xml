<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/GivolButtonStyle</item>
        <item name="android:textViewStyle">@style/GivolTextViewStyle</item>
    </style>

    <style name="GivolTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/min_margin_start</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:paddingStart">2dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>

        <item name="android:paddingEnd">2dp</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
    </style>

    <style name="HintTextInputLayout" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="GivolButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:background">@drawable/givol_button_bg</item>
    </style>

</resources>